<%- include('partials/header') %>

<!-- Main Content -->
<div class="container mt-4">
  
  <!-- Status Messages Area -->
  <div id="statusMessages"></div>

  <!-- Page Header -->
  <div class="row mb-4">
    <div class="col-12">
      <h1 class="display-6">
        <i class="bi bi-folder2-open text-primary me-2"></i>
        Session Explorer
      </h1>
      <p class="lead text-muted">Browse and explore your Claude Code conversation sessions</p>
    </div>
  </div>

  <!-- Search and Filters -->
  <div class="row mb-4">
    <div class="col-12">
      <h5 class="mb-3">
        <i class="bi bi-funnel me-2"></i>
        Search & Filter
      </h5>
      <div class="card">
        <div class="card-body">
          
          <div class="row">
            <!-- Search Input -->
            <div class="col-md-6 mb-3">
              <label for="sessionSearch" class="form-label">Search Sessions:</label>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="bi bi-search"></i>
                </span>
                <input 
                  type="text" 
                  class="form-control" 
                  id="sessionSearch" 
                  placeholder="Search by ID, project, or message..."
                >
              </div>
            </div>

            <!-- Project Filter -->
            <div class="col-md-6 mb-3">
              <label for="projectFilterSessions" class="form-label">Project:</label>
              <select class="form-select" id="projectFilterSessions">
                <option value="">All Projects</option>
              </select>
            </div>

          </div>

          <!-- Filter Summary -->
          <div id="filterSummary" class="mt-2">
            <small class="text-muted">
              <i class="bi bi-info-circle me-1"></i>
              <span id="sessionCount">Loading sessions...</span>
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Sessions List -->
  <div class="row">
    <div class="col-12">
      <h5 class="mb-3">
        <i class="bi bi-list-ul me-2"></i>
        Sessions
      </h5>
      <div class="card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            
            <!-- View Toggle -->
            <div class="btn-group" role="group">
              <input type="radio" class="btn-check" name="viewMode" id="listView" value="list" checked>
              <label class="btn btn-outline-primary btn-sm" for="listView">
                <i class="bi bi-list"></i> List
              </label>
              
              <input type="radio" class="btn-check" name="viewMode" id="cardView" value="cards">
              <label class="btn btn-outline-primary btn-sm" for="cardView">
                <i class="bi bi-grid"></i> Cards
              </label>
            </div>
          </div>

          <!-- Sessions Container -->
          <div id="sessionsContainer">
            <div class="text-center py-4">
              <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading sessions...</span>
              </div>
              <p class="text-muted mt-2">Loading session data...</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>

<!-- Sessions JavaScript -->
<script src="/public/js/sessions.js"></script>

<%- include('partials/footer') %>