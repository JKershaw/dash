<%- include('partials/header') %>

<!-- Main Content -->
<div class="container mt-4">
  
  <!-- Status Messages Area -->
  <div id="statusMessages"></div>

  <!-- Page Header -->
  <div class="row mb-4">
    <div class="col-12">
      <!-- Navigation and Title -->
      <div class="d-flex align-items-center mb-3">
        <a href="/sessions" class="btn btn-outline-secondary me-3">
          <i class="bi bi-arrow-left me-1"></i>
          Back to Sessions
        </a>
        <h1 class="display-6 mb-0">
          <i class="bi bi-chat-square-text text-primary me-2"></i>
          Session Details
        </h1>
      </div>
      
      <!-- Session Metadata -->
      <div class="d-flex flex-wrap align-items-center justify-content-between mb-3">
        <div class="d-flex flex-wrap gap-3 align-items-center">
          <div class="d-flex align-items-center">
            <strong class="text-muted me-2">Session ID:</strong>
            <code id="sessionIdDisplay" class="bg-light px-2 py-1 rounded"><%= sessionId %></code>
          </div>
          <div class="d-flex align-items-center">
            <strong class="text-muted me-2">Project:</strong>
            <span id="projectNameDisplay" class="badge bg-secondary">Loading...</span>
          </div>
          <div class="d-flex align-items-center">
            <strong class="text-muted me-2">Duration:</strong>
            <span id="sessionDurationDisplay" class="text-dark">Loading...</span>
          </div>
        </div>
        
        <!-- Control buttons -->
        <div class="d-flex gap-2 mt-2 mt-md-0">
          <button id="toggleAllToolsBtn" class="btn btn-sm btn-outline-info" disabled>
            <i class="bi bi-arrows-expand me-1"></i>Expand All Tools
          </button>
        </div>
      </div>
      
      <p class="lead text-muted mb-0">
        Detailed conversation log with tool interactions and analysis
      </p>
    </div>
  </div>

  <!-- Session Content -->
  <div class="row">
    <div class="col-12">
      <!-- Session Script Container (no card wrapper) -->
      <div id="sessionScriptContainer" class="session-content">
        <div class="text-center py-4">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading session script...</span>
          </div>
          <p class="text-muted mt-2">Loading session content...</p>
        </div>
      </div>
    </div>
  </div>

</div>

<!-- Session JavaScript -->
<script src="/public/js/session.js"></script>

<%- include('partials/footer') %>