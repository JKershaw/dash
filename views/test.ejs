<%- include('partials/header') %>

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title">
            <i class="bi bi-check-circle text-success me-2"></i>
            Bootstrap + API Client Test
          </h1>
          <p class="card-text">Template compilation is working!</p>
          <p class="text-muted">Current time: <%= new Date().toISOString() %></p>
          
          <div class="mt-3">
            <button id="testApiBtn" class="btn btn-primary">
              <i class="bi bi-cloud-check me-2"></i>
              Test API Client
            </button>
            <div id="apiResult" class="mt-2"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  console.log('ðŸ§ª Test page loaded');
  console.log('ðŸ“¡ API client available:', typeof window.API);
  
  // Test API client
  document.getElementById('testApiBtn').addEventListener('click', async function() {
    const btn = this;
    const result = document.getElementById('apiResult');
    
    btn.disabled = true;
    btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Testing...';
    
    try {
      const health = await window.API.getHealth();
      result.innerHTML = '<div class="alert alert-success mt-2"><i class="bi bi-check-lg me-2"></i>API client working! Health check passed.</div>';
    } catch (error) {
      result.innerHTML = `<div class="alert alert-danger mt-2"><i class="bi bi-x-lg me-2"></i>API Error: ${error.message}</div>`;
    } finally {
      btn.disabled = false;
      btn.innerHTML = '<i class="bi bi-cloud-check me-2"></i>Test API Client';
    }
  });
});
</script>

<%- include('partials/footer') %>